{% extends 'base.html' %}

{% block title %}Edit User - Admin{% endblock %}

{% block content %}
<div class="max-w-lg mx-auto mt-10 card-modern p-6">
    <h2 class="text-2xl font-bold mb-4">Edit User</h2>
    <form action="/admin/users/edit/{{ edit_user.id }}" method="post">
        <div class="mb-4">
            <label class="block text-sm font-medium mb-2">Username</label>
            <input type="text" name="username" value="{{ edit_user.username }}" class="w-full px-4 py-2 rounded-lg bg-secondary border border-border" readonly>
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium mb-2">New Password</label>
            <input type="password" name="password" class="w-full px-4 py-2 rounded-lg bg-secondary border border-border" placeholder="Leave blank to keep current password">
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium mb-2">Role</label>
            <select name="role" class="w-full px-4 py-2 rounded-lg bg-secondary border border-border">
                <option value="admin" {% if edit_user.role == 'admin' %}selected{% endif %}>Admin</option>
                <option value="editor" {% if edit_user.role == 'editor' %}selected{% endif %}>Editor</option>
                <option value="viewer" {% if edit_user.role == 'viewer' %}selected{% endif %}>Viewer</option>
            </select>
        </div>
        <input type="hidden" name="user_id" value="{{ edit_user.id }}">
        <div class="flex gap-3 mt-6">
            <a href="/admin/users" class="btn-secondary-modern flex-1">Cancel</a>
            <button type="submit" class="btn-primary-modern flex-1">Update User</button>
        </div>
    </form>
</div>
{% endblock %} 